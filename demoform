    <div class="container">
        <h1>üì¨ Li√™n h·ªá v·ªõi ch√∫ng t√¥i</h1>
        <p class="subtitle">Ch√∫ng t√¥i s·∫Ω ph·∫£n h·ªìi trong v√≤ng 24 gi·ªù</p>
        
        <form id="contactForm">
            <div class="form-group">
                <label for="name">H·ªç v√† t√™n <span class="required">*</span></label>
                <input type="text" id="name" name="name" placeholder="Nguy·ªÖn VƒÉn A" required>
            </div>
            
            <div class="form-group">
                <label for="email">Email <span class="required">*</span></label>
                <input type="email" id="email" name="email" placeholder="email@example.com" required>
            </div>
            
            <div class="form-group">
                <label for="phone">S·ªë ƒëi·ªán tho·∫°i</label>
                <input type="tel" id="phone" name="phone" placeholder="0123456789">
            </div>
            
            <div class="form-group">
                <label for="subject">Ti√™u ƒë·ªÅ</label>
                <input type="text" id="subject" name="subject" placeholder="V·ªÅ d·ª± √°n...">
            </div>
            
            <div class="form-group">
                <label for="message">N·ªôi dung tin nh·∫Øn <span class="required">*</span></label>
                <textarea id="message" name="message" placeholder="Vi·∫øt tin nh·∫Øn c·ªßa b·∫°n ·ªü ƒë√¢y..." required></textarea>
            </div>
            
            <button type="submit" id="submitBtn">
                <span id="btnText">G·ª≠i tin nh·∫Øn</span>
            </button>
        </form>
        
        <div id="messageBox" class="message"></div>
    </div>

    <script>
        const form = document.getElementById('contactForm');
        const submitBtn = document.getElementById('submitBtn');
        const btnText = document.getElementById('btnText');
        const messageBox = document.getElementById('messageBox');
        
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // Disable button v√† hi·ªán loading
            submitBtn.disabled = true;
            btnText.innerHTML = 'ƒêang g·ª≠i<span class="loading"></span>';
            messageBox.style.display = 'none';
            
            // L·∫•y d·ªØ li·ªáu form
            const formData = new FormData(form);
            const data = Object.fromEntries(formData);
            
            // Th√™m timestamp
            data.timestamp = new Date().toISOString();
            
            try {
                const response = await fetch('https://elite2606.app.n8n.cloud/webhook-test/fac6b147-27db-4df1-9f79-164169c25acf', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });
                
                if (response.ok) {
                    // Th√†nh c√¥ng
                    messageBox.className = 'message success';
                    messageBox.innerHTML = '‚úÖ G·ª≠i th√†nh c√¥ng! C·∫£m ∆°n b·∫°n ƒë√£ li√™n h·ªá. Ch√∫ng t√¥i s·∫Ω ph·∫£n h·ªìi s·ªõm nh·∫•t c√≥ th·ªÉ.';
                    messageBox.style.display = 'block';
                    form.reset();
                } else {
                    throw new Error('Server error');
                }
            } catch (error) {
                // L·ªói
                messageBox.className = 'message error';
                messageBox.innerHTML = '‚ùå C√≥ l·ªói x·∫£y ra khi g·ª≠i tin nh·∫Øn. Vui l√≤ng th·ª≠ l·∫°i sau ho·∫∑c li√™n h·ªá tr·ª±c ti·∫øp qua email.';
                messageBox.style.display = 'block';
                console.error('Error:', error);
            } finally {
                // Reset button
                submitBtn.disabled = false;
                btnText.textContent = 'G·ª≠i tin nh·∫Øn';
            }
        });
        
        // T·ª± ƒë·ªông ·∫©n message sau 5 gi√¢y
        const observer = new MutationObserver(() => {
            if (messageBox.style.display === 'block') {
                setTimeout(() => {
                    messageBox.style.display = 'none';
                }, 5000);
            }
        });
        observer.observe(messageBox, { attributes: true, attributeFilter: ['style'] });
    </script>
